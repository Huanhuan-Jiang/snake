  -bugprone-forward-declaration-namespace,
  -bugprone-macro-parentheses,
  -bugprone-lambda-function-name,
  -bugprone-reserved-identifier,
  -bugprone-swapped-arguments,
  clang-diagnostic-*,
  clang-analyzer-*,
  cppcoreguidelines-*,
